    // Execution ladder for scale-in/scale-out (see specs/execution_ladder_spec.txt)
    "ladder": {
      "enabled": true,
      "max_levels": 4,
      "lot_size": 100,
      "method": "atr_pct",
      "buy_offsets_atr": {
