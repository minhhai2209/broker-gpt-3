      // Lowering this quantile makes the system more sensitive to market selloffs.
      "idx_drop_q": 0.1,
      // vol_ann_q: annualised volatility percentile used to flip between regimes.
      // If Codex perceives persistent stress, consider nudging toward 0.90–0.92 instead of drastic cuts.
      "vol_ann_q": 0.95,
      // trend_floor_q: percentile floor for trend strength; raising this forces stronger confirmation before buying.
      "trend_floor_q": 0.1,
      // Calibrate ATR guard on high percentiles to avoid premature budget cuts
      // Soft guard handles early warnings; hard guard is the absolute cutoff.
      "atr_soft_q": 0.90,
      "atr_hard_q": 0.97,
      // Market strength (ms_*) quantiles control how aggressive breadth filters behave.
      // Use soft to pre-emptively slow entries, hard to fully halt when leadership collapses.
      "ms_soft_q": 0.6,
      "ms_hard_q": 0.35,
      // Drawdown floor ensures we taper exposure after major index drops even if other metrics are calm.
      "dd_floor_q": 0.8,
      // Breadth guard rails: keep in the 0.35–0.45 zone under normal conditions.
      // Adjust half-life only when structural regime shifts occur (e.g., multi-quarter rotations).
      "breadth_floor_q": 0.4,
      // Exponential half-life (days) for weighting breadth history toward recent data
      "breadth_floor_half_life_days": 126,
      // Hard clamps to avoid unrealistic guard thresholds in thin breadth regimes
      "breadth_floor_min": 0.32,
      "breadth_floor_max": 0.48,
      // Leaders (top breadth cohort) need RSI/momentum above these quantiles to justify adds.
      // Lower slightly when market structure is grinding but orderly; raise during frothy phases.
      "leader_rsi_q": 0.75,
      "leader_mom_q": 0.75
    },
    "liquidity": {
      // Notional guard: per‑order notional ≤ α × ADTV20 (α below)
      // Codex can increase this (e.g., to 24) when liquidity confirmed improving, or drop toward 12 when tape is thin.
      "adtv_multiple": 20.0
    },
    "sizing": {
      "enp_target_add": 4.0,
      "enp_target_new": 3.0
    },
    "dynamic_caps": {
      // enp_total_target: total effective number of positions target; lower values shrink breadth exposure.
      "enp_total_target": 9,
      // sector_limit_target: cap fraction for any single sector. Keep between 0.25 and 0.40 unless structural change confirmed.
      "sector_limit_target": 0.35
    }
  }
}
